{
    "version": 2,
    "configurePresets": [
        {
            "name": "twip_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/../../build/plugins",
            "cacheVariables": {
                "BUILD_TARGET64": true,
                "ITOM_APP_DIR": "${sourceDir}/../../build/itom",
                "PLUGIN_XIMEA": true,
                "PLUGIN_FFTWFilters": false,
                "PLUGIN_Holography": false,
                "PLUGIN_LIBUSB": false,
                "PLUGIN_NEWPORT_CONEXLDS": false,
                "PLUGIN_OceanOpticsSpec": false,
                "PLUGIN_OpenCVGrabber": false,
                "PLUGIN_QuantumComposer": false,
                "PLUGIN_rawImport": false,
                "PLUGIN_x3pio": false,
                "PLUGIN_aerotechEnsemble": false,
                "PLUGIN_AvantesAvaSpec": false,
                "PLUGIN_UhlRegister": false,
                "PLUGIN_UhlText": false,
                "Boost_NO_WARN_NEW_VERSIONS": true,
                "THORLABS_PM100D_VISA_DIR": "C:/Program Files/IVI Foundation/VISA/Win64"
            }
        },
        {
            "name": "develop_windows",
            "displayName": "Develop Windows",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. With PCL.",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "BUILD_WITH_PCL": true,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL",
                "XIMEA_APIDIR": "C:/XIMEA/API/xiAPI",
                "XIMEA_SDK_VERSION": "4.24.03",
                "PLUGIN_PGRFlyCapture": true,
                "FLYCAPTURE_PGRFLYCAP_INCLUDE_DIR": "C:/Program Files/Point Grey Research/FlyCapture2/include"
            }
        },
        {
            "name": "twip_api",
            "displayName": "twip API",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. Without PCL.",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "BUILD_WITH_PCL": false,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL",
                "XIMEA_APIDIR": "C:/XIMEA/API/xiAPI",
                "XIMEA_SDK_VERSION": "4.24.03",
                "PLUGIN_PGRFlyCapture": true,
                "FLYCAPTURE_PGRFLYCAP_INCLUDE_DIR": "C:/Program Files/Point Grey Research/FlyCapture2/include"
            }
        },
        {
            "name": "transporto_release",
            "displayName": "Transporto Release",
            "inherits": "twip_common",
            "description": "Sets Ninja generator and disables debug postfix.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/buildroot-build",
            "cacheVariables": {
                "BUILD_WITH_PCL": false,
                "BUILD_GIT_TAG": false,
                "CMAKE_DEBUG_POSTFIX": {
                    "type": "STRING",
                    "value": ""
                },
                "XIMEA_APIDIR": "/opt/XIMEA/include",
                "PLUGIN_V4L2": false,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "transporto_debug",
            "displayName": "Transporto Debug",
            "inherits": "transporto_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}