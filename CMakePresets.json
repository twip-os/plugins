{
    "version": 2,
    "configurePresets": [
        {
            "name": "transporto_release",
            "displayName": "Transporto Release",
            "description": "Sets Ninja generator and disables debug postfix.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../../build/plugins",
            "cacheVariables": {
                "CMAKE_DEBUG_POSTFIX": {
                    "type": "STRING",
                    "value": ""
                },
                "BUILD_TARGET64": "ON",
                "PLUGIN_XIMEA": "ON",
                "XIMEA_APIDIR": "/opt/XIMEA/include",
                "PLUGIN_V4L2": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "transporto_debug",
            "displayName": "Transporto Debug",
            "inherits": "transporto_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}